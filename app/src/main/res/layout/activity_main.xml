<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textSize="200sp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/tvShowCount"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/keyboard_layout"
        android:orientation="horizontal"
        android:gravity="right"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="历史最高"
            android:textColor="#A8A8A8"
            android:layout_marginRight="@dimen/label_margin_right"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="0"
            android:textColor="#E91E63"
            android:layout_marginRight="@dimen/value_margin_right"
            android:id="@+id/tvMax"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="今日最高"
            android:textColor="#A8A8A8"
            android:layout_marginRight="@dimen/label_margin_right" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="0"
            android:textColor="#4CAF50"
            android:layout_marginRight="@dimen/value_margin_right"
            android:id="@+id/tvTodayMax"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="今日平均"
            android:textColor="#A8A8A8"
            android:layout_marginRight="@dimen/label_margin_right" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="0"
            android:textColor="#BFBC47"
            android:layout_marginRight="@dimen/value_margin_right"
            android:id="@+id/tvTodayAvg"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="计数(10以上)"
            android:textColor="#A8A8A8"
            android:layout_marginRight="@dimen/label_margin_right"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="0"
            android:textColor="#3F51B5"
            android:layout_marginRight="@dimen/value_margin_right"
            android:id="@+id/tvCountToday"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:id="@+id/keyboard_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_weight="1"
                android:layout_height="@dimen/btn_height"
                android:textAlignment="center"
                android:text="7"
                android:layout_width="0dp"
                android:id="@+id/btnKey7"></Button>
            <Button
                android:layout_weight="1"
                android:layout_height="@dimen/btn_height"
                android:textAlignment="center"
                android:text="8"
                android:layout_width="0dp"
                android:id="@+id/btnKey8"></Button>
            <Button
                android:layout_weight="1"
                android:layout_height="@dimen/btn_height"
                android:textAlignment="center"
                android:text="9"
                android:layout_width="0dp"
                android:id="@+id/btnKey9"></Button>
            <Button
                android:layout_weight="1"
                android:layout_height="@dimen/btn_height"
                android:textAlignment="center"
                android:text="0"
                android:layout_width="0dp"
                android:id="@+id/btnKey0"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="@dimen/btn_height"
                            android:layout_weight="1"
                            android:text="4"
                            android:id="@+id/btnKey4"></Button>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="@dimen/btn_height"
                            android:layout_weight="1"
                            android:text="5"
                            android:id="@+id/btnKey5"></Button>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="@dimen/btn_height"
                            android:layout_weight="1"
                            android:text="6"
                            android:id="@+id/btnKey6"></Button>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="@dimen/btn_height"
                            android:layout_weight="1"
                            android:text="1"
                            android:id="@+id/btnKey1"></Button>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="@dimen/btn_height"
                            android:layout_weight="1"
                            android:text="2"
                            android:id="@+id/btnKey2"></Button>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="@dimen/btn_height"
                            android:layout_weight="1"
                            android:text="3"
                            android:id="@+id/btnKey3"></Button>
                    </LinearLayout>
                </LinearLayout>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/enter"
                android:id="@+id/btnEnter"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>